<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ListView?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="duke.gui.MainWindow"
            prefWidth="800.0" prefHeight="600.0">
    <left>
        <BorderPane>
            <top>
                <Button fx:id="clearButton" text="Clear" onAction="#clearDisplay"  maxWidth="Infinity" maxHeight="Infinity" />
            </top>
            <center>
                <ScrollPane fx:id="scrollPane" vbarPolicy="ALWAYS" hbarPolicy="NEVER">
                    <VBox fx:id="dialogContainer" spacing="15" prefWidth="400"/>
                </ScrollPane>
            </center>
            <bottom>
                <TextField fx:id="inputField" onAction="#handleUserInput"/>
            </bottom>
        </BorderPane>
    </left>
    <center>
        <ListView fx:id="taskView" minWidth="400" minHeight="400" focusTraversable="false" />
    </center>
</BorderPane>
